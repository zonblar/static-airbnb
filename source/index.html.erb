  <!-- Your features code -->
    <%= partial "banner" %>

    <div class="padded text-center features">
      <div class="row">
        <div class="col-xs-3">
          <%= image_tag "images/globe.png", alt:"globe"%>
          <h2>Discover the world</h2>
          <p>The earth is your new home.</p>
        </div>
        <div class="col-xs-3">
          <%= image_tag "images/dollar.png", alt:"dollar"%>
          <h2>Pay online</h2>
          <p>No cash issues anymore.</p>
        </div>
        <div class="col-xs-3">
          <%= image_tag "images/beer.png", alt:"beer"%>
          <h2>Meet people</h2>
          <p>Discover new culture and lifestyle.</p>
        </div>
        <div class="col-xs-3">
          <%= image_tag "images/heart.png", alt:"heart"%>
          <h2>Share and love</h2>
          <p>Join a community you will love..</p>
        </div>
      </div>
    </div>

    <!-- Your cards code -->
    <div class="wrapper-grey padded">
      <div class="container">
        <div class="row">
          <div class="col-xs-12 col-sm-4">
            <!-- insert <div class="card"> -->
            <div class="card" style="background: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('images/card-paris.jpg');">
              <div class="card-category">Paris</div>
              <div class="card-description">
                <h2>Seb's home</h2>
                <p>Charming room with patio</p>
              </div>
              <%= image_tag "images/seb.jpg", class:"card-user avatar", alt:"user"%>
              <%= link_to "Home", "/", class:"card-link"%>
            </div>
            <!-- card limit -->
          </div>
          <div class="col-xs-12 col-sm-4">
            <!-- insert <div class="card"> -->
            <div class="card" style="background: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('images/card-brussels.jpeg');">
              <div class="card-category">Brussels</div>
              <div class="card-description">
                <h2>Anne's home</h2>
                <p>Lovely house</p>
              </div>
              <%= image_tag "images/anne.jpg", class:"card-user avatar", alt:"user"%>
              <%= link_to "Home", "/", class:"card-link"%>
            </div>
            <!-- card limit -->
          </div>
          <div class="col-xs-12 col-sm-4">
            <!-- insert <div class="card"> -->
            <div class="card" style="background: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('images/card-london.jpeg');">
              <div class="card-category">London</div>
              <div class="card-description">
                <h2>Romain's home</h2>
                <p>Nice flat in Piccadilly</p>
              </div>
              <%= image_tag "images/romain.jpg", class:"card-user avatar", alt:"user"%>
              <%= link_to "Home", "/", class:"card-link"%>
            </div>
            <!-- card limit -->
          </div>
        </div>
      </div>
    </div>

    <!-- Your newsletter code -->
    <div class= "text-center">
      <h2>Get news from us</h2>
      <p>Leave us your mail and get news from us</p>
      <form action="#" class="form-inline">
        <input type="email" class="form-control" placeholder="bob@gmail.com">
        <input type="submit" value="Subscribe" class="btn btn-primary">
      </form>
    </div>

    <!-- Your map code -->
